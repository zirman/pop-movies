<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/pop_movies_primary</item>
        <item name="colorPrimaryDark">@color/pop_movies_primary_dark</item>
    </style>

    <style name="FragmentDetailTitle">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:background">@color/pop_movies_primary_light</item>
    </style>

    <style name="FragmentDetailYear">
        <item name="android:height">30dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FragmentDetailRuntime">
        <item name="android:height">30dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FragmentDetailRating">
        <item name="android:height">30dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FragmentDetailReleaseDate">
        <item name="android:height">30dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
